{
  "name": "piperider-report",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@chakra-ui/icons": "^2.0.1",
    "@chakra-ui/react": "^2.1.2",
    "@chakra-ui/styled-system": "^2.1.1",
    "@chakra-ui/system": "^2.1.1",
    "@chakra-ui/theme-tools": "^2.0.1",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "d3": "^7.4.4",
    "date-fns": "^2.28.0",
    "framer-motion": "^6.3.4",
    "lodash": "^4.17.21",
    "nanoid": "^3.3.4",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "wouter": "2.8.0-alpha.2"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@types/jest": "^28.1.2",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "chalk": "^5.0.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "generate-schema": "^2.6.0",
    "json-schema-to-typescript": "^10.1.5",
    "node-html-parser": "^5.3.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "prestart:single": "run-s schema:* typing:* embed:html",
    "start:single": "REACT_APP_SINGLE_REPORT=true react-scripts start",
    "prestart:comparison": "run-s schema:* typing:* embed:html",
    "start:comparison": "REACT_APP_SINGLE_REPORT=false react-scripts start",
    "schema:single": "node src/sdlc/generate-report-schema.js single",
    "schema:comparison": "node src/sdlc/generate-report-schema.js comparison",
    "typing:single": "npx json2ts single-report-schema.json > single-report-schema.d.ts",
    "typing:comparison": "npx json2ts comparison-report-schema.json > comparison-report-schema.d.ts",
    "embed:html": "node src/sdlc/embed-window-data.js",
    "build": "run-p build:*",
    "build:single": "rimraf ../piperider_cli/data/report/single-report && GENERATE_SOURCEMAP=false REACT_APP_SINGLE_REPORT=true react-scripts build && mv build ../piperider_cli/data/report/single-report",
    "build:comparison": "rimraf ../piperider_cli/data/report/comparison-report && GENERATE_SOURCEMAP=false REACT_APP_SINGLE_REPORT=false react-scripts build && mv build ../piperider_cli/data/report/comparison-report",
    "eject": "react-scripts eject",
    "cleanup": "rimraf ../piperider_cli/data/report/single-report && rimraf ../piperider_cli/data/report/comparison-report",
    "test": "react-scripts test",
    "lint": "eslint src/",
    "lint:fix": "npm run lint -- --fix"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:prettier/recommended"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  }
}